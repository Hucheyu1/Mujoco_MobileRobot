<mujoco model="pusher2">
  <include file="scene.xml"/>

  <worldbody>

    <body name="robot_0" pos="0.0 1.0 0.5">
      <freejoint name="root_free_0"/>

      <!-- base -->
      <geom name="base_0"
              type="cylinder"
              pos="0 0 0.10"
              size="0.18 0.04"
              rgba="1.0 0.6 0.2 1"/>

      <body name="pusher1" pos="0.20 0 0.1">
          <geom type="box" size="0.02 0.16 0.09" rgba="1 1 1 1" />
      </body>

      <!-- left wheel-->
      <body name="left_wheel_0" pos="0 0.1 0.06" quat="0.707388 -0.706825 0 0">
          <joint name="left_hinge_0" type="hinge" axis="0 0 1" damping="0.02"/>
          <geom  name="left_geom_0" type="cylinder" size="0.06 0.005" rgba="0.1 0.6 0.9 1"/>
      </body>

      <!-- right wheel -->
      <body name="right_wheel_0" pos="0 -0.1 0.06" quat="0.707388 -0.706825 0 0">
          <joint name="right_hinge_0" type="hinge" axis="0 0 1" damping="0.02"/>
          <geom  name="right_geom_0"  type="cylinder" size="0.06 0.005" rgba="0.1 0.6 0.9 1"/>
      </body>

      <!-- <geom name="caster_0" type="sphere" pos="0.10 0 0.04" size="0.04" rgba="0.2 0.2 0.2 1" />
      <geom name="caster_1" type="sphere" pos="-0.10 0 0.04" size="0.04" rgba="0.2 0.2 0.2 1"/> -->
    </body>



  </worldbody>


  <tendon>
  <fixed name="forward">
    <joint joint="left_hinge_0" coef=".5"/>
    <joint joint="right_hinge_0" coef=".5"/>
  </fixed>
  <fixed name="turn">
    <joint joint="left_hinge_0" coef="-.5"/>
    <joint joint="right_hinge_0" coef=".5"/>
  </fixed>
</tendon>

<actuator>
  <motor name="forward" tendon="forward" ctrlrange="-1. 1."/>
  <motor name="turn" tendon="turn" ctrlrange="-1. 1."/>
</actuator>

<sensor>
    <jointactuatorfrc name="right" joint="right_hinge_0"/>
    <jointactuatorfrc name="left" joint="left_hinge_0"/>
  </sensor>

</mujoco>